<div class="container mx-auto px-4 py-8 text-center">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">新規登録</h1>

  <div class="bg-white rounded-md shadow p-6 inline-block w-full max-w-xs text-left border border-gray-200">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- メールアドレス -->
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-semibold mb-2 text-gray-800" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "border border-gray-300 focus:border-gray-500 rounded-md px-4 py-2 w-full" %>
      </div>

      <!-- パスワード -->
      <div>
        <%= f.label :password, "パスワード", class: "block text-sm font-semibold mb-2 text-gray-800" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mb-1">(<%= @minimum_password_length %>文字以上)</p>
        <% end %>
        <%= f.password_field :password,
              autocomplete: "new-password",
              class: "border border-gray-300 focus:border-gray-500 rounded-md px-4 py-2 w-full" %>
      </div>

      <!-- パスワード確認 -->
      <div>
        <%= f.label :password_confirmation, "パスワード確認", class: "block text-sm font-semibold mb-2 text-gray-800" %>
        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "border border-gray-300 focus:border-gray-500 rounded-md px-4 py-2 w-full" %>
      </div>

      <!-- 登録ボタン -->
      <div  class="flex justify-center">
        <%= f.submit "新規登録",
              class: "bg-green-600 text-white font-semibold px-6 py-2 rounded-md hover:bg-green-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
