<% if resource.errors.any? %>
  <div class="space-y-1 mt-2">
    <% resource.errors.full_messages.each do |message| %>
      <p class="text-sm text-red-600"><%= message %></p>
    <% end %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="mt-2 text-sm text-red-600">
    <%= flash[:alert] %>
  </div>
<% end %>
